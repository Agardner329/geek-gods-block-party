#pragma config(Hubs,  S1, HTMotor,  HTMotor,  HTMotor,  HTMotor)
#pragma config(Hubs,  S3, HTServo,  none,     none,     none)
#pragma config(Sensor, S2,     INF,            sensorHiTechnicIRSeeker1200)
#pragma config(Sensor, S4,     RGB,            sensorCOLORFULL)
#pragma config(Motor,  mtr_S1_C1_1,     yellow,        tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C1_2,     red,           tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C2_1,     blue,          tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C2_2,     green,         tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C3_1,     arm,           tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C3_2,     whisk,         tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C4_1,     lift,          tmotorTetrix, openLoop)
#pragma config(Motor,  mtr_S1_C4_2,     flag,          tmotorTetrix, openLoop)
#pragma config(Servo,  srvo_S3_C1_1,    autoflipper,          tServoStandard)
#pragma config(Servo,  srvo_S3_C1_2,    wrist,                tServoStandard)
#pragma config(Servo,  srvo_S3_C1_3,    servo3,               tServoNone)
#pragma config(Servo,  srvo_S3_C1_4,    servo4,               tServoNone)
#pragma config(Servo,  srvo_S3_C1_5,    servo5,               tServoNone)
#pragma config(Servo,  srvo_S3_C1_6,    servo6,               tServoNone)
int switcha = 0;
int switchb = 0;
task main(){
	while(true){
		if((nNxtButtonPressed == 3) && (switcha == 0)){
			switcha = 1;
		}
		if((nNxtButtonPressed != 3) && (switcha == 1)){
			switcha = 0;
			switchb ++;
		}
		if(switchb > 9){
			switchb = 0;
		}
		if(switchb == 0){
			nxtDisplayCenteredBigTextLine(4, "Yellow");
			if (nNxtButtonPressed == 2){
				motor[yellow] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[yellow] = 60;
			}else{
				motor[yellow] = 0;
			}
		}
		if(switchb == 1){
			nxtDisplayCenteredBigTextLine(4, "Red");
			if (nNxtButtonPressed == 2){
				motor[red] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[red] = 60;
			}else{
				motor[red] = 0;
			}
		}
		if(switchb == 2){
			nxtDisplayCenteredBigTextLine(4, "Blue");
			if (nNxtButtonPressed == 2){
				motor[blue] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[blue] = 60;
			}else{
				motor[blue] = 0;
			}
		}
		if(switchb == 3){
			nxtDisplayCenteredBigTextLine(4, "Green");
			if (nNxtButtonPressed == 2){
				motor[green] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[green] = 60;
			}else{
				motor[green] = 0;
			}
		}
		if(switchb == 4){
			nxtDisplayCenteredBigTextLine(4, "Wrist");
			if (nNxtButtonPressed == 2){
				servo[wrist] += 1;
			}else if(nNxtButtonPressed == 1){
				servo[wrist] -= 1;
			}
		}
		if(switchb == 5){
			nxtDisplayCenteredBigTextLine(4, "Arm");
			if (nNxtButtonPressed == 2){
				motor[arm] = -100;
			}else if(nNxtButtonPressed == 1){
				motor[arm] = 100;
			}else{
				motor[arm] = 0;
			}
		}
		if(switchb == 6){
			nxtDisplayCenteredBigTextLine(4, "Whisk");
			if (nNxtButtonPressed == 2){
				motor[whisk] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[whisk] = 60;
			}else{
				motor[whisk] = 0;
			}
		}
		if(switchb == 7){
			nxtDisplayCenteredBigTextLine(4, "Flag");
			if (nNxtButtonPressed == 2){
				motor[flag] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[flag] = 60;
			}else{
				motor[flag] = 0;
			}
		}
		if(switchb == 8){
			nxtDisplayCenteredBigTextLine(4, "Lift");
			if (nNxtButtonPressed == 2){
				motor[lift] = -60;
			}else if(nNxtButtonPressed == 1){
				motor[lift] = 60;
			}else{
				motor[lift] = 0;
			}
		}
		if(switchb == 9){
			nxtDisplayCenteredBigTextLine(4, "AutoFlipper");
			if (nNxtButtonPressed == 2){
				servo[autoflipper] += 1;
			}else if(nNxtButtonPressed == 1){
				servo[autoflipper] -= 1;
			}
		}
	}
}
